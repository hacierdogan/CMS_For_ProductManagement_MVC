@model WebProduct.Models.Hesap
@{
    if (Session["ManagerAdmin"] != null)
    {
        Response.Redirect("~/apmanager");
    }
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow" /><!--Sayfanın arama motorlarında lislistelenmemesi-->
    <title>Admin Paneli</title>
    <!-- Favicon -->
    <link rel="icon" href="/content/images/logo/favicon.png" />

    <!-- GLOBAL MAINLY STYLES-->
    <link href="~/content/panel/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/content/panel/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/content/panel/vendors/themify-icons/css/themify-icons.css" rel="stylesheet" />
    <!-- THEME STYLES-->
    <link href="~/content/panel/css/main.min.css" rel="stylesheet" />
    <link href="~/content/panel/css/panelstyle.css" rel="stylesheet" />
    <!-- PAGE LEVEL STYLES-->
    <link href="~/content/panel/css/pages/auth-light.css" rel="stylesheet" />

</head>
<body class="bg-silver-300">
    <div class="sectionlogin">
        <div class="content">
            <div class="login-form">
                <div class="formlogo">
                    <img src="~/content/images/logo/logo.png" class="img-responsive" />
                </div>
                <h4 class="login-title">Yönetici Girişi</h4>
                 @if (ViewBag.LoginHata != null)
                 {
                    <p class="text-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @ViewBag.LoginHata</p>
                 }
                @using (Html.BeginForm())
                {                   
                    <div class="form-group">
                        <div class="input-group-icon right">
                            <div class="input-icon"><i class="fa fa-envelope"></i></div>
                            <input class="form-control" type="email" id="eposta" name="eposta" placeholder="Eposta" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group-icon right">
                            <div class="input-icon"><i class="fa fa-lock font-16"></i></div>
                            <input class="form-control" type="password" id="parola" name="parola" placeholder="Parola">
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <label class="ui-checkbox ui-checkbox-info">
                            <input type="checkbox" name="benihatirla" id="benihatirla">
                            <span class="input-span"></span>Oturumu açık tut
                        </label>
                        <a href="/parolayenile">Parolamı Unuttum?</a>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-info btn-block loginbutton" type="submit">Giriş <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                    </div>
                }
            </div>
        </div>


    </div>

    <!-- BEGIN PAGA BACKDROPS-->
    <div class="sidenav-backdrop backdrop"></div>
    <div class="preloader-backdrop">
        <div class="page-preloader">Loading</div>
    </div>
    <!-- END PAGA BACKDROPS-->
    <!-- CORE PLUGINS -->
    <script src="~/content/panel/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/content/panel/vendors/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/content/panel/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL PLUGINS -->
    <script src="~/content/panel/vendors/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <!-- CORE SCRIPTS-->
    <!-- PAGE LEVEL SCRIPTS-->
    <script type="text/javascript">
        // PAGE PRELOADING ANIMATION
        $(window).on('load', function () {
            setTimeout(function () {
                $('.preloader-backdrop').fadeOut(200);
                $('body').addClass('has-animation');
            }, 0);
        });

        $(function () {
            $('.login-form form').validate({
                errorClass: "help-block",
                rules: {
                    eposta: {
                        required: true,
                        eposta: true
                    },
                    parola: {
                        required: true
                    }
                },
                highlight: function (e) {
                    $(e).closest(".form-group").addClass("has-error")
                },
                unhighlight: function (e) {
                    $(e).closest(".form-group").removeClass("has-error")
                },
            });
        });
    </script>
</body>
</html>
