@model WebProduct.Models.Ceo

@{
    ViewBag.Title = "CeoAyar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">CEO Ayarları</div>
            <div class="ibox-tools">
                <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
            </div>
        </div>
        <div class="ibox-body">
            <form action="/apayarlar/ceoayar" class="form-horizontal" id="ceo-form" method="post" novalidate="novalidate">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.CeoID)
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site Başlığı</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="SiteBaslik" id="SiteBaslik" value="@Model.SiteBaslik">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site Aciklaması</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="SiteAciklama" id="SiteAciklama" value="@Model.SiteAciklama">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site Sahibi</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="SiteSahip" id="SiteSahip" value="@Model.SiteSahip">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site Yöneticisi</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="SiteYonetici" id="SiteYonetici" value="@Model.SiteYonetici">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site Kurulus Yılı</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="SiteKurulus" id="SiteKurulus" value="@Model.SiteKurulus">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site Keys</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="SiteKeys" id="SiteKeys" value="@Model.SiteKeys">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">GoogleAnalytics Kodu</label>
                    <div class="col-sm-10">
                        <textarea class="form-control inputanalytic" id="GoogleAnalytics" name="GoogleAnalytics">@Model.GoogleAnalytics</textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 ml-sm-auto">
                        <button class="btn btn-info" type="submit">Değişiklikleri Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="backpage">
    @Html.ActionLink("Geri Dön", "Index")
</div>
@section Scripts
{
    <script src="~/content/panel/vendors/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        //CEO Form
        $("#ceo-form").validate({
            rules: {
                SiteBaslik: {
                    required: !0
                },
                SiteAciklama: {
                    required: !0
                },
                SiteSahip: {
                    required: !0
                },
                SiteYonetici: {
                    required: !0
                },
                SiteKurulus: {
                    required: !0,
                    minlength: 4,
                    maxlength: 4
                },
                SiteKeys: {
                    required: !0
                },
                GoogleAnalytics: {
                    required: !0
                }
            },
            errorClass: "help-block error",
            highlight: function (e) {
                $(e).closest(".form-group.row").addClass("has-error")
            },
            unhighlight: function (e) {
                $(e).closest(".form-group.row").removeClass("has-error")
            },
        });
    </script>
}